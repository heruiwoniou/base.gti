ib()
	display: inline-block;
	vertical-align: middle;
th()
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
.sw-banner-3d
	font-size 12px;
	.img-container
		/* @meta {"spritesheet": {"include": false}} */
		background: url(images/loading.png) no-repeat center;
		background-color: #ccc;
		margin:0.41em 0 1.2em 0;
		img
			ib()
			transition opacity .2s ease
			opacity 0
		&.show
			img
				opacity 1
	div,ul,li,h1,h2,h3,span,i,b,p
		font-family: "Microsoft YaHei";
		margin: 0;
		padding:0;
		font-size:1em;
		font-weight: normal;
	margin:0 auto;
	height: 100%;
	width: 100%;
	line-height: 100%;
	//font-size:0px;
	ib()
	.sw-banner-3d-container
		max-width: 108.3em;
		line-height: 1;
		ib()
		text-align: center;
		height: 100%;
		width: 100%;
		.sw-banner-3d-header
			height: 7em;
			ul
				margin:0px;
				padding:0px;
				height: 7em;
				line-height: 7em;
				li
					display: inline-block;
					padding:1.6em;
					height: 7em;
					box-sizing: border-box;
					line-height: 3.75em;
					position: relative;
					a
						display: block;
						padding:0 3.3em;
						color: white;
						font-size:1.5em;
						text-decoration: none;
					&.select
						a
							color: #162b3d;
							background: white;
							background: rgba(255,255,255,.5)
							font-size: 2em;
						[class*=line-]{
							position: absolute;
							background: white;
							background: rgba(255,255,255,.5);
						}
						.line-top
							top: 1.2em;
							left: 0px;
							height: 0.083em;
							width: 6.66em;
						.line-left
							left:1.2em;
							top:0px;
							width: 0.083em;
							height: 3.33em;
						.line-right
							height: 3.33em;
							width:0.083em;
							right:1.2em;
							bottom:0px;
						.line-bottom
							width: 6.66em;
							height: 0.083em;
							right:0px;
							bottom:1.2em;
		.sw-banner-3d-content
			-moz-user-select:none;
			cursor: default;
			height: 50em;
			position: relative;
			.sw-banner-3d-item
				box-sizing: border-box;
				.before
				.after
					position: absolute;
					top:0px;
					left:0px;
					height: 100%;
					width:100%;
				.before
					background: white;
					opacity: .5;
					filter:unquote('alpha(opacity=50)')
				.after
					padding: 1.66em;
					box-sizing: border-box;
				h1
					th();
					text-align: left;
					font-size: 1.5em;
					font-weight: bold;
					line-height: 1.3;
					color:#05254f;
				p
					text-align:left;
					font-size:1.16em;
					text-indent: 2em;
					white-space: normal;
					line-height: 1.3
					height: 10.08em;
					color:#1b3144;
					margin-bottom:0.66em;
					overflow: hidden;
				.control
					line-height: 40px;
					.more
						line-height: 3.33em;
						padding:0 2.5em;
						background: #796159;
						float: left;
						color:white;
						text-decoration: none;
					.time
						color:#76818b;
						float:right;
						margin-right:0.41em;
			.first
			.last
				position: absolute;
				top:50%;
				margin-top:-12.91em;
				width: 31.66em;
				height: 25.83em;
				h1
					text-align: left;
					font-size: 1.16em;
					font-weight: bold;
					color:#05254f;
				p
					text-align:left;
					text-indent: 2em;
					white-space: normal;
					line-height: 1.3
					height: 5em;;
					color:#1b3144;
					overflow: hidden;
				.img-container
					width: 28.33em;
					height: 10.83em;
					margin:0.41em 0;
			.first
				left:3.75em;
			.last
				right:3.75em;
			.current
				.before
					opacity: 1;
					filter:unquote('alpha(opacity=100)')
				z-index: 1;
				position: absolute;
				left:50%;
				top:50%;
				width: 48.33em;
				height: 40.83em;
				margin-top:-20.41em;
				margin-left:-24.16em;
				.img-container
					width: 45em;
					height: 18.33em;
		.sw-banner-3d-more
			height: 8.33em;
			line-height: 8.33em;
			//font-size:0px;
			a.more
				ib()
				height: 7.91em;
				width: 7.91em;
				background: url(sprite/more.png) no-repeat;
				margin:0 1.66em;
				transition: margin .1s ease ,opacity .1s ease;
				opacity: .8
				&:hover
					opacity: 1
					margin:0 1.2em;
			span
				ib()
				width: 5em;
				height: 1.58em;
				&.more-left
					background: url(sprite/more-left.png) no-repeat;
				&.more-right
					background: url(sprite/more-right.png) no-repeat;
