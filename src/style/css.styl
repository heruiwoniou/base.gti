ib()
	display: inline-block;
	vertical-align: middle;
th()
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
.sw-banner-3d
	font-size 12px;
	.img-container
		/* @meta {"spritesheet": {"include": false}} */
		background: url(images/loading.png) no-repeat center;
		background-color: #ccc;
		margin:5px 0 10px 0;
		img
			ib()
			transition opacity .2s ease
			opacity 0
		&.show
			img
				opacity 1
	div,ul,li,h1,h2,h3,span,i,b,p
		font-family: "Microsoft YaHei";
		margin: 0px;
		padding:0px;
		font-size:1em;
		font-weight: normal;
	margin:0 auto;
	height: 100%;
	width: 100%;
	line-height: 100%;
	//font-size:0px;
	ib()
	.sw-banner-3d-container
		max-width: 1300px;
		line-height: 1;
		ib()
		text-align: center;
		height: 100%;
		width: 100%;
		.sw-banner-3d-header
			height: 85px;
			ul
				margin:0px;
				padding:0px;
				height: 85px;
				line-height: 85px;
				li
					display: inline-block;
					padding:20px;
					height: 85px;
					box-sizing: border-box;
					line-height: 45px;
					position: relative;
					a
						display: block;
						padding:0 40px;
						color: white;
						font-size:1.5em;
						text-decoration: none;
					&.select
						a
							color: #162b3d;
							background: white;
							background: rgba(255,255,255,.5)
							font-size: 2em;
						[class*=line-]{
							position: absolute;
							background: white;
							background: rgba(255,255,255,.5);
						}
						.line-top
							top: 10px;
							left: 0px;
							height: 1px;
							width: 80px;
						.line-left
							left:10px;
							top:0px;
							width: 1px;
							height: 40px;
						.line-right
							height: 40px;
							width:1px;
							right:10px;
							bottom:0px;
						.line-bottom
							width: 80px;
							height: 1px;
							right:0px;
							bottom:10px;
		.sw-banner-3d-content
			-moz-user-select:none;
			cursor: default;
			height: 600px;
			position: relative;
			.sw-banner-3d-item
				box-sizing: border-box;
				.before
				.after
					position: absolute;
					top:0px;
					left:0px;
					height: 100%;
					width:100%;
				.before
					background: white;
					opacity: .5;
					filter:unquote('alpha(opacity=50)')
				.after
					padding: 20px;
					box-sizing: border-box;
				h1
					th();
					text-align: left;
					font-size: 1.5em;
					font-weight: bold;
					line-height: 1.3;
					color:#05254f;
				p
					text-align:left;
					font-size:1.16em;
					text-indent: 2em;
					white-space: normal;
					line-height: 1.3
					height: 145px;
					color:#1b3144;
					margin-bottom:8px;
					overflow: hidden;
				.control
					line-height: 40px;
					.more
						line-height: 40px;
						padding:0 30px;
						background: #796159;
						float: left;
						color:white;
						text-decoration: none;
					.time
						color:#76818b;
						float:right;
						margin-right:5px;
			.first
			.last
				position: absolute;
				top:50%;
				margin-top:-155px;
				width: 380px;
				height: 310px;
				h1
					text-align: left;
					font-size: 1.16em;
					font-weight: bold;
					color:#05254f;
				p
					text-align:left;
					text-indent: 2em;
					white-space: normal;
					line-height: 1.3
					height: 60px;
					color:#1b3144;
					overflow: hidden;
				.img-container
					width: 340px;
					height: 130px;
			.first
				left:45px;
			.last
				right:45px;
			.current
				.before
					opacity: 1;
					filter:unquote('alpha(opacity=100)')
				z-index: 1;
				position: absolute;
				left:50%;
				top:50%;
				width: 580px;
				height: 490px;
				margin-top:-245px;
				margin-left:-290px;
				.img-container
					width: 540px;
					height: 220px;
		.sw-banner-3d-more
			height: 100px;
			line-height: 100px;
			//font-size:0px;
			a.more
				ib()
				height: 95px;
				width: 95px;
				background: url(sprite/more.png) no-repeat;
				margin:0 20px;
				transition: margin .1s ease ,opacity .1s ease;
				opacity: .8
				&:hover
					opacity: 1
					margin:0 10px;
			span
				ib()
				width: 60px;
				height: 19px;
				&.more-left
					background: url(sprite/more-left.png) no-repeat;
				&.more-right
					background: url(sprite/more-right.png) no-repeat;
