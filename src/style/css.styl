.calendar
	position: relative
	h1
		font-size 20px
		text-align center
		margin 0
		span
			width 50px
			cursor pointer
			text-align center
		span.left
			float left
		span.right
			float right
	.calendar-panel
		width 100%
		table
			border-collapse collapse
			width 100%
			height 100%
			table-layout fixed
			th
			td
				text-align center
				&.o *
					opacity .5