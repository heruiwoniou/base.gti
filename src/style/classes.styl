@import './common.styl';

$seed = 60;

em($number = 0)
    unit(floor(($number/$seed)*100)/100,'em')

.face
	div,ul,li
		font-size: 1em;
	.header
		width: em(1600);
		height: em(165)
		margin: 0 auto;
		position: relative;
		.menu
			ul
				height: em(49)
				li
					ib();
					height: em(49)
					border-bottom:em(4) solid #ccc;
		.search
			width: em(350);
			height:em(35);
			position: absolute;
			right:0;
			top:em(65);
			.search-body
			.search-button
				position: absolute;
				top: 0;
				img
					height: 100%;
					width: 100%;
					vertical-align top;
			.search-body
				left: 0;
				height: em(35);
				width: em(312);
				overflow: hidden;
				.input-container
					position: absolute;
					top: em(5);
					left: em(15);
					width: em(282);
					height: em(28);
					input
						width: 100%;
						height: 100%;
						border: 0px;
						padding: 0;
						background: transparent;
						position: absolute;
						top: 0;
						left: 0;
						outline: none;
						font-size:em(14);
						color:white;
						&::-webkit-input-placeholder
						&:-moz-placeholder
						&::-moz-placeholder
						&:-ms-input-placeholder
							font-family: 'Microsoft YaHei'
							color: red
			.search-button
				right: 0;
				width: em(38);
				height: em(35);
				cursor: pointer;
		