@import './common.styl';

$seed = 87.5;

.sw-banner-3d
	font-size unit($seed,'px')
	display: none;
	.img-container
		background: url(images/loading.png) no-repeat center;
		background-color: #ccc;
		margin:unit(floor(5/$seed*100)/100,'em') 0 unit(floor(10/$seed*100)/100,'em') 0;
		img
			ib()
			transition opacity .2s ease
			opacity 0
		&.show
			img
				opacity 1
	div,ul,li,h1,h2,h3,span,i,b,p
		font-family: "Microsoft YaHei";
		margin: 0;
		padding:0;
		font-size:1em;
		font-weight: normal;
	margin:0 auto;
	height: 100%;
	width: 100%;
	line-height: 100%;
	ib()
	.sw-banner-3d-container
		width: unit(floor(1300/$seed*100)/100,'em');
		line-height: 1;
		ib()
		text-align: center;
		height: 100%;
		.sw-banner-3d-header
			height: unit(floor(85/$seed*100)/100,'em');
			ul
				margin:0;
				padding:0;
				height: unit(floor(85/$seed*100)/100,'em');
				line-height: unit(floor(85/$seed*100)/100,'em');
				li
					display: inline-block;
					vertical-align: top;
					padding:unit(floor(20/$seed*100)/100,'em');
					height: unit(floor(85/$seed*100)/100,'em');
					box-sizing: border-box;
					line-height: unit(floor(45/$seed*100)/100,'em');
					position: relative;
					a
						display: block;
						padding:0 unit(floor(120/$seed*100)/100,'em');
						color: white;
						font-size:unit(floor(18/$seed*100)/100,'em');
						text-decoration: none;
					&.select
						a
							color: #162b3d;
							background: white;
							background: rgba(255,255,255,.5)
							filter:unquote('alpha(opacity=80)');
							font-size: unit(floor(24/$seed*100)/100,'em');
						[class*=line-]{
							position: absolute;
							background: white;
							background: rgba(255,255,255,.5);
						}
						.line-top
							top: unit(floor(10/$seed*100)/100,'em');
							height: unit(floor(1/$seed*100)/100,'em');
							width: unit(floor(80/$seed*100)/100,'em');
							left: 0;
							min-height: 1px;
						.line-left
							left:unit(floor(10/$seed*100)/100,'em');
							width: unit(floor(1/$seed*100)/100,'em');
							height: unit(floor(40/$seed*100)/100,'em');
							top:0;
							min-width: 1px;
						.line-right
							height: unit(floor(40/$seed*100)/100,'em');
							width:unit(floor(1/$seed*100)/100,'em');
							right:unit(floor(10/$seed*100)/100,'em');
							bottom:0;
							min-width: 1px;
						.line-bottom
							width: unit(floor(80/$seed*100)/100,'em');
							height: unit(floor(1/$seed*100)/100,'em');
							bottom:unit(floor(10/$seed*100)/100,'em');
							right:0;
							min-height: 1px;
		.sw-banner-3d-content
			overflow: hidden;
			-moz-user-select:none;
			cursor: default;
			height: unit(floor(600/$seed*100)/100,'em');
			position: relative;
			.sw-banner-3d-item
				position: absolute;
				box-sizing: border-box;
				width: unit(floor(380/$seed*100)/100,'em');
				height: unit(floor(310/$seed*100)/100,'em');
				left: unit(floor(1300/$seed*100)/100,'em');
				top: unit(floor(145/$seed*100)/100,'em');
				.before
				.after
					position: absolute;
					top:0;
					left:0;
					height: 100%;
					width:100%;
				.before
					background: white;
					opacity: .5;
					filter:unquote('alpha(opacity=50)')
				.after
					padding: unit(floor(20/$seed*100)/100,'em');
					box-sizing: border-box;
				h1
					th();
					text-align: left;
					font-size: unit(floor(14/$seed*100)/100,'em');
					font-weight: bold;
					color:#05254f;
					line-height: 1.3;
				div.content
					height: unit(floor(60/$seed*100)/100,'em');
					margin-bottom:unit(floor(8/$seed*100)/100,'em');
					overflow: hidden;
					p
						font-size:unit(floor(12/$seed*100)/100,'em');
						text-align:left;
						text-indent: unit(floor(24/$seed*100)/100,'em');
						white-space: normal;
						line-height: 1.3
						color:#1b3144;
				.img-container
					width: 100%;
					height: unit(floor(130/$seed*100)/100,'em');
				.control
					line-height: unit(floor(40/$seed*100)/100,'em');
					zoom:1;
					overflow: hidden;
					.more
						padding:0 unit(floor(30/$seed*100)/100,'em');
						display: block;
						background: #796159;
						float: left;
						color:white;
						text-decoration: none;
						font-size:unit(floor(14/$seed*100)/100,'em');
					.time
						color:#76818b;
						float:right;
						font-size:unit(floor(12/$seed*100)/100,'em');
						margin-right:unit(floor(5/$seed*100)/100,'em');
			.current
				.before
					opacity: 1;
					filter:unquote('alpha(opacity=100)')
				z-index: 1;
				width: unit(floor(580/$seed*100)/100,'em');
				height: unit(floor(490/$seed*100)/100,'em');
				top:unit(floor(55/$seed*100)/100,'em');
				h1
					font-size: unit(floor(18/$seed*100)/100,'em');
				div.content
					height: unit(floor(145/$seed*100)/100,'em');
					p
						font-size:unit(floor(14/$seed*100)/100,'em');
				.img-container
					width: 100%;
					height: unit(floor(220/$seed*100)/100,'em');
		.sw-banner-3d-more
			height: unit(floor(100/$seed*100)/100,'em');
			line-height: unit(floor(100/$seed*100)/100,'em');
			a.more
				ib()
				height: unit(floor(95/$seed*100)/100,'em');
				width: unit(floor(95/$seed*100)/100,'em');
				margin:0 unit(floor(20/$seed*100)/100,'em');
				transition: margin .1s ease ,opacity .1s ease;
				opacity: .8
				&:hover
					opacity: 1
					margin:0 unit(floor(10/$seed*100)/100,'em');
				img
					height: 100%;
					width: 100%;
					border: 0;
					vertical-align: top;
			span
				ib()
				width: unit(floor(60/$seed*100)/100,'em');
				height: unit(floor(19/$seed*100)/100,'em');
				line-height: 0;
				img
					border: 0;
					height: 100%;
					width: 100%;
					vertical-align: top;